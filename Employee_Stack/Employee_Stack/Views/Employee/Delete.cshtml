@model Employee_Stack.Models.Employee

<form method="POST" asp-action="DeletePost">

    <div class="form-group">
        @Html.HiddenFor(Model => Model.Id)
        <label asp-for="EmployeeName"></label>
        <input asp-for="EmployeeName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect2">Example multiple select</label>
        <select multiple class="form-control">
            @foreach (var languages in Model.TeckStack)
            {

                <option disabled>@languages.Languages</option>

            }
        </select>
    </div>
    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Delete" />
            </div>
            <div class="col">
                <a class="btn btn-danger w-75" asp-action="Index">Go back</a>
            </div>
        </div>
    </div>

</form>
