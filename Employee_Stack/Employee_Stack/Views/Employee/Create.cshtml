@{
    List<Employee_Stack.Models.ViewModel.EmployeeTechStackViewModel> languages = ViewBag.Languages;
}
@model Employee_Stack.Models.Employee

<form method="POST" asp-action="CreatePost">
    <div class="mb-3">
        <label asp-for="EmployeeName" class="form-label">Employee Name</label>
        <input asp-for="EmployeeName" class="form-control" />
    </div>

    @{
        foreach (var language in languages)
        {
            <div class="form-check">
                <input class="form-check-input" name="selectedLanguages" type="checkbox" value="@language.LanguageId" @(Html.Raw(language.IsKnown ? "checked=\"checked\"" : "")) />
                @language.LanguageName
            </div>
        }
    }


    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Create" />
            </div>
            <div class="col">
                <a class="btn btn-danger w-75" asp-action="Index">Go back</a>
            </div>
        </div>
    </div>

</form>

