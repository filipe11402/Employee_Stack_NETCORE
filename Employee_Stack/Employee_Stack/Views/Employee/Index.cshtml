@model IEnumerable<Employee_Stack.Models.Employee>
    <div class="col-6 text-center">
        <a class="nav-link btn btn-primary float-right" asp-controller="Employee" asp-action="Create">Create Nem Employee</a>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Employee Name</th>
                <th scope="col">Known Languages</th>
            </tr>
        </thead>
        @if (Model.Count() > 0)
        {
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <th scope="row">@emp.EmployeeName</th>
                        @if (emp.TeckStack.Count > 0)
                        {
                            <th>You Dont have any languages in your Stack</th>
                        }
                        <th>WOW you are a coder</th>
                    </tr>

                }

            </tbody>

        }
    <tr>
        <th scope="row">No employees</th>
    </tr>
    </table>

