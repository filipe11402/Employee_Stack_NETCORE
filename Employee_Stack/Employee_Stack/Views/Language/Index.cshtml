@model IEnumerable<Employee_Stack.Models.TechStack>
<div class="col-6 text-center">
    <a class="nav-link btn btn-primary float-right" asp-controller="Language" asp-action="Create">Create Nem Language Category</a>
</div>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Programming Language</th>
        </tr>
    </thead>
    @if (Model.Count() > 0)
    {
        <tbody>
            @foreach (var emp in Model)
            {
            <tr>
                <th scope="row" width="40%">@emp.Languages</th>
                <th scope="row" width="30%"><a asp-controller="Language" asp-action="Update" asp-route-Id="@emp.Id" class="btn btn-sm btn-primary">Update</a></th>
                <th scope="row" width="30%"><a asp-controller="Language" asp-action="" asp-route-Id="@emp.Id" class="btn btn-sm btn-danger">Delete</a></th>
            </tr>

            }

        </tbody>

    }
    else
    {
        <tr>
            <th scope="row">No Programming Languages to display</th>
        </tr>

    }

</table>

