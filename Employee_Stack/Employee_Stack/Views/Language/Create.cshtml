@model Employee_Stack.Models.TechStack
<form method="POST" asp-action="CreatePost">
    <div class="form-group">
        <label asp-for="Languages">Programming Language Name</label>
        <input asp-for="Languages" class="form-control" placeholder="ex: C#">
    </div>

    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="create" />
            </div>
            <div class="col">
                <a class="btn btn-danger w-75" asp-action="Index">Go back</a>
            </div>
        </div>
    </div>

</form>